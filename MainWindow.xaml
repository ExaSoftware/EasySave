<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:EasySave"
        xmlns:language="clr-namespace:EasySave.Resources"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="EasySave.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1080">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Text="EasySave" Margin="20" FontFamily="Agency FB" FontSize="36" HorizontalAlignment="Left"/>
            <Button Name="btnSettings" HorizontalAlignment="Right" Margin="20,0" Content="{iconPacks:Material Height=50, Kind=Cog, Width=50}" Foreground="Blue" Height="64" Width="Auto" Click="btnSettings_Click"/>
        </Grid>
        <Grid Grid.Row="1">
            
            <Frame Grid.Column="1" Name="frame" NavigationUIVisibility="Hidden"/>
            
        </Grid>
    </Grid>
</Window>
