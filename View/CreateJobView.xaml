<Page x:Class="EasySave.CreateJobView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:local="clr-namespace:EasySave"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateJobView" Background="White">

    <Page.Resources>
        
        <!-- Styles -->

        <Style TargetType="{x:Type Button}" x:Key="controlButtonStyle">
            <Setter Property="Background" Value="#423b36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" Padding="10" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="buttonStyle">
            <Setter Property="Background" Value="#423b36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" Padding="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="selectFolderButton" BasedOn="{StaticResource buttonStyle}">
            <Setter Property="Foreground" Value="LightBlue"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <!-- Page title -->
        
        <StackPanel Orientation="Vertical" Grid.Row="0" HorizontalAlignment="Stretch" Margin="0,20">
            <TextBlock Text="Créer ou modifier un travail de sauvegarde" HorizontalAlignment="Center" FontSize="24" Foreground="#423b36" FontWeight="Bold"/>
            <Rectangle Fill="#a30700" Grid.Row="1" Height="5" Margin="100,20,100,5" Width="Auto" HorizontalAlignment="Stretch"/>
        </StackPanel>
        
        <!-- Fields -->

        <Grid Grid.Row="1" Margin="50,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Text="Label" Grid.Row="0" VerticalAlignment="Center"/>
            <TextBlock Text="Répertoire source" Grid.Row="1" VerticalAlignment="Center"/>
            <TextBlock Text="Répertoire de destination" Grid.Row="2" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBlock Text="Type de sauvegarde" Grid.Row="3" VerticalAlignment="Center"/>
            <TextBox Height="20" Grid.Row="0" Grid.Column="1"/>
            <DockPanel Grid.Column="1" Grid.Row="1" Height="20">
                <Button Name="btnSelectSourcePath" Margin="0" Padding="0" DockPanel.Dock="Right" Width="Auto" Content="{iconPacks:FontAwesome Kind=FolderPlusSolid, Height=16, Width=16}" Style="{StaticResource selectFolderButton}" Click="btnSelectSourcePath_Click"/>
                <TextBox Name="txtBoxSourcePath" Height="Auto" HorizontalAlignment="Stretch" DockPanel.Dock="Right" Text="{Binding Text, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" />
            </DockPanel>
            <DockPanel Grid.Column="1" Grid.Row="2" Height="20">
                <Button Name="btnSelectDestinationPath" Margin="0" Padding="0" DockPanel.Dock="Right" Width="Auto" Content="{iconPacks:FontAwesome Kind=FolderPlusSolid, Height=16, Width=16}" Style="{StaticResource selectFolderButton}" Click="btnSelectDestinationPath_Click"/>
                <TextBox Name="txtBoxDestinationPath" Height="Auto" HorizontalAlignment="Stretch" DockPanel.Dock="Right" Text="{Binding Text, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" />
            </DockPanel>
            <ComboBox Grid.Row="3" Grid.Column="1" Height="20">
                <ComboBoxItem Content="Total" IsSelected="True"/>
                <ComboBoxItem Content="Différentielle" />
            </ComboBox>
        </Grid>
        
        <!-- Page button control -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="btnCancel" Height="50" Width="Auto" Margin="10,0" Style="{StaticResource controlButtonStyle}" Click="btnCancel_Click">
                <StackPanel Orientation="Horizontal">
                    <Label Content="{iconPacks:FontAwesome Kind=TimesSolid}" Foreground="Red" VerticalAlignment="Center" Padding="0" Margin="0,0,5,0"/>
                    <TextBlock Text="Annuler" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </Button>
            <Button Name="btnValid" Height="50" Width="Auto" Margin="10,0" Style="{StaticResource controlButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <Label Content="{iconPacks:FontAwesome Kind=CheckSolid}" Foreground="Green" VerticalAlignment="Center"  Padding="0" Margin="0,0,5,0"/>
                    <TextBlock Text="Valider" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </Button>
        </StackPanel>
        




        <!--<Label Content="job backupo creation edition" />
        <Button Name="btnReturn" Content="Return" Height="50" Width="50" Click="btnReturn_Click"/>-->
    </Grid>
</Page>
